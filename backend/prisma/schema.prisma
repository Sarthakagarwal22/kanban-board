generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id      Int     @id @default(autoincrement())
  name    String
  lists   List[],
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model List {
  id      Int     @id @default(autoincrement())
  name    String
  position Int    @default(0)       // optional: order of list in board
  boardId Int
  board   Board   @relation(fields: [boardId], references: [id])
  tasks   Task[]
}

model Task {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  position    Int     @default(0)   // optional: order within list
  listId      Int
  list        List    @relation(fields: [listId], references: [id])
}
